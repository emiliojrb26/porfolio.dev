---
import JavaScript from "./icons/JavaScript.astro";
import CSS from "./icons/CSS.astro";
import HTML5 from "./icons/HTML5.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import DemoIcon from "../components/icons/Demo.astro";

const TAGS = {
  JavaScript: {
    name: "JavaScript",
    icon: JavaScript,
  },
  CSS: {
    name: "CSS",
    icon: CSS,
  },
  HTML5: {
    name: "HTML5",
    icon: HTML5,
  },
};
const PROJECTS = [
  {
    title: "Pokédex",
    description:
      "Pokédex Project: HTML, CSS, JavaScript. Utilizing PokéAPI to display Pokémon info, classified by types.",
    link: "https://emiliojrb26.github.io/Pokedex/",
    github: "https://github.com/emiliojrb26/Pokedex",
    image: "/src/assets/images/pokedex.webp",
    tags: [TAGS.HTML5, TAGS.CSS, TAGS.JavaScript],
  },
];
---

{
  PROJECTS.map(({ image, title, link, description, tags, github }) => (
    <article class="flex gap-6 pb-16 ">
      <div class="flex-1 hover:scale-95 transition">
        <img
          loading="lazy"
          class="rounded shadow-2xl shadow-white/5 aspect-video"
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
      </div>
      <div class="flex-1">
        <h3 class="text-2xl font-semibold text-yellow-400 ">{title}</h3>
        <nav class="flex gap-6 py-2 ">
          <a
            target="_blank"
            class="text-lg text-blue-600 flex gap-2 hover:underline hover:text-yellow-400 transition"
            href={link}
          >
            Live
            <DemoIcon class=" md:size-6" />
          </a>

          <a
            target="_blank"
            class="text-xl text-blue-600 flex gap-2 hover:underline hover:text-yellow-400 transition"
            href={github}
          >
            Code
            <GitHubIcon class=" md:size-6" />
          </a>
        </nav>
        <p class="text-lg mb-2 text-pretty text-slate-300">{description}</p>
        <ul class="flex gap-x-4 flex-row">
          {tags.map((tag) => (
            <li class="relative group/tooltip">
              <tag.icon class="size-8 " />
              <span class="absolute pointer-events-none transition-all opacity-0 z-20 bottom-full -translate-y-0 py-1 px-1.5 text-xs left-1/2 -translate-x-1/2 rounded-md whitespace-nowrap text-gray-200 bg-gray-800 dark:bg-white dark:text-gray-700 before:content-[''] before:absolute before:bg-gray-800 before:rounded-sm before:w-2.5 before:rotate-45 before:h-2.5 before:-bottom-1 before:-z-10 before:left-1/2 before:-translate-x-1/2 before:dark:bg-white before:dark:gray-800 group-hover/tooltip:opacity-100 group-hover/tooltip:-translate-y-3">
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
      </div>
    </article>
  ))
}
